---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import Theme from "./Theme.astro";
import SearchWidget from "./SearchWidget.astro";
---

<header>
  <nav>
    <h2><a href="/astro-blog">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/astro-blog">Home</HeaderLink>
      <HeaderLink href="/astro-blog/blog/page/1">Blog</HeaderLink>
      <HeaderLink href="/astro-blog/about">About</HeaderLink>
    </div>
    <div class="flex items-center gap-2">
      <!-- <SearchWidget /> -->
      <Theme />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--color-background);
    box-shadow: 0 2px 8px rgba(var(--color-dark-text), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--color-dark-text);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
